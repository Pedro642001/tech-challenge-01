{
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.fixAll": "explicit",
        "source.fixAll.ruff": "explicit"
    },
    "ruff.enable": true,
    "files.exclude": {
        "**/.venv": true,
        "**/__pycache__": true,
        "**/.ruff_cache": true,
        "**/__init__.py": true,
    },
    "search.exclude": {
        "**/.venv": true,
        "**/__init__.py": true,
        "**/__pycache__": true,
        "**/.ruff_cache": true
    }
}